@{
    ViewData["Title"] = "CreatePost";
}

<h1 class="fw-bolder text-center">Create Post</h1>

<form method="post" asp-action="PostMessage">
    <div class="card main-card card-body shadow-lg">
        <div class="form-group mb-3">
            <label class="fw-bold">Title</label>
            <input type="text" class="form-control"/>
        </div>


        <div class="form-group mb-3">
            <label class="fw-bold">Body</label>
            <textarea class="form-control" rows="4" placeholder="Write post..."></textarea>
        </div>

        <div class="card-footer text-end">
            <button class="btn btn-primary">Post</button>
        </div>
    </div>

    
</form>

<div class="mt-3">
    <h2 class="fw-bolder">Post Rules</h2>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">✅ Keep it respectful – no hate speech or harassment.</li>
        <li class="list-group-item">✅ No spam or self-promotion.</li>
        <li class="list-group-item">✅ Avoid sharing personal or sensitive information.</li>
        <li class="list-group-item">✅ Stick to relevant topics.</li>
        <li class="list-group-item">✅ Violations may result in post removal.</li>
    </ul>
</div>