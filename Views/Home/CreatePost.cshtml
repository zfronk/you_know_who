@{
    ViewData["Title"] = "CreatePost";
}

<h1 class="fw-bolder display-4 text-center">Create Post</h1>

<form method="post" asp-action="PostMessage">
    <div class="card main-card card-body shadow-lg">
        <div class="form-group mb-3">
            <label for="postTitle" class="fw-bold">Title</label>
            <input type="text" class="form-control" id="postTitle" name="PostTitle"/>
        </div>


        <div class="form-group mb-3">
            <label class="fw-bold" for="postBody">Body</label>
            <textarea class="form-control" id="postBody" rows="4" name="PostBody" placeholder="Write post..."></textarea>
        </div>

        <div class="card-footer text-end">
            <button class="btn btn-primary">Post</button>
        </div>
    </div>

    
</form>

<div class="text-center">
    @if(ViewData["Opps"] != null){
        <p class="alert alert-danger">@ViewData["Opps"]</p>

    }
</div>


<div class="text-center mt-3">
    <p>No post to share view your posts?</p>

    <a asp-action="YourPosts" class="btn btn-outline-secondary">View posts</a>

</div>

<div class="mt-3">
    <h2 class="fw-bolder">Post Rules</h2>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">✅ Keep it respectful – no hate speech or harassment.</li>
        <li class="list-group-item">✅ No spam or self-promotion.</li>
        <li class="list-group-item">✅ Avoid sharing personal or sensitive information.</li>
        <li class="list-group-item">✅ Stick to relevant topics.</li>
        <li class="list-group-item">✅ Violations may result in post removal.</li>
    </ul>
</div>



<div class="mt-5">
    <a asp-action="Dashboard" class="btn btn-outline-dark">Back to dashboard</a>
</div>