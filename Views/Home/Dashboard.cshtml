@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="fw-bolder display-3">Dashboard</h1>
    <p>Welcome back, @ViewData["Nickname"]!</p>
</div>

<!--Dashboard routes-->
<div class="container row">

    <!--Post message-->
    <div class="col-md-4">
        <div class="card p-3 text-center shadow-lg">
            <div class="card-title"><h3 class="text-uppercase fw-bold">Create Post</h3></div>
            <div class="card-body">
                <p>Create an anonymous post...</p>
                <p>Share, Let others see what your thinking!</p>

                <div class="card-footer">
                    <form asp-action="CreatePost">
                        <button class="btn btn-outline-primary m-1">Create Post</button>
                    </form>

                </div>
                
            </div>
        </div>

    </div>

    <!--Go live-->
    <!--See others-->
    <div class="col-md-4">
        <div class="card p-3 shadow-lg text-center">
            <div class="card-title">
                <h4 class="fw-bold text-uppercase">YKW Live Hub</h4>
            </div>

            <div class="card-body">
                <p>See what others are saying? In your region.</p>
                
                <div class="card-footer">
                    <button class="btn btn-outline-dark m-1">Live Hub</button>
                </div>
                
            </div>
        </div>
    </div>

    <!--Created Posts-->
    <div class="col-md-4">
         <div class="card p-3 text-center shadow-lg">
            <div class="card-title">
                <h5 class="fw-bold text-uppercase">Your Posts</h5>
            </div>

            <div class="card-body">
                <p>View your created posts.</p>

                <div class="card-footer">
                    <form asp-action="YourPosts">
                        <button class="btn btn-outline-secondary m-1">View Posts</button>
                    </form>

                </div>
                            
            </div>
        </div>
    </div>
   

    <!--Log Out-->
    <div class="col-lg-6">
        <div class="card p-3 text-center shadow-lg">
            <div class="card-title"><h2 class="text-uppercase fw-bold">Log out</h2></div>
            <div class="card-body">
                <p>Safely log out. Hope you had a nice time!</p>

                <div class="card-footer">
                    <form asp-action="LogOut">
                        <button class="btn btn-outline-danger m-1">Log Out</button>
                    </form>

                </div>
                
            </div>
        </div>
    </div>
</div>