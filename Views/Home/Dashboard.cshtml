@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="fw-bolder display-3">Dashboard</h1>
    <p>Welcome back, @ViewData["Nickname"]!</p>
</div>

<!--Dashboard routes-->
<div class="container row">

    <!--Post message-->
    <div class="col-md-4">
        <div class="card p-3 text-center shadow-lg">
            <div class="card-title"><h3 class="text-uppercase fw-bold">Create Post</h3></div>
            <div class="card-body">
                <p>Create an anonymous post...</p>
                <p>Share, Let others see what your thinking!</p>

                <form method="" asp-action="CreatePost">
                    <button class="btn btn-outline-primary">Create Post</button>
                </form>
                
            </div>
        </div>

    </div>

    <!--Go live-->
    <!--See others-->
    <div class="col-md-4">
        <div class="card p-3 shadow-lg text-center">
            <div class="card-title">
                <h4 class="fw-bold text-uppercase">Go Live</h4>
            </div>

            <div class="card-body">
                <p>See what others are saying?</p>
                <button class="btn btn-outline-dark">Go Live</button>
            </div>
        </div>
    </div>

    <!--Created Posts-->
    <div class="col-md-4">
         <div class="card p-3 text-center shadow-lg">
            <div class="card-title">
                <h5 class="fw-bold text-uppercase">Created Posts</h5>
            </div>

            <div class="card-body">
                <p>View your created posts.</p>

                <form asp-action="YourPosts">
                    <button class="btn btn-outline-secondary">Your Posts</button>
                </form>
            </div>
        </div>
    </div>
   

    <!--Log Out-->
    <div class="col-md-4">
        <div class="card p-3 text-center shadow-lg">
            <div class="card-title"><h2 class="text-uppercase fw-bold">Log out</h2></div>
            <div class="card-body">
                <p>Hope you had a nice time.</p>

                <form method="" asp-action="LogOut">
                    <button class="btn btn-outline-danger">Log Out</button>
                </form>
                
            </div>
        </div>
    </div>
</div>